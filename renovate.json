{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":automergeMinor",
    "group:allNonMajor"
  ],
  "labels": [
    "dependencies"
  ],
  "rangeStrategy": "bump",
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "description": "Group AWS SDK updates",
      "groupName": "aws-sdk-go-v2",
      "matchPackageNames": [
        "/^github.com/aws//"
      ]
    },
    {
      "description": "Group OpenTelemetry updates",
      "groupName": "opentelemetry",
      "matchPackageNames": [
        "/^go.opentelemetry.io//"
      ]
    },
    {
      "description": "Group Google packages",
      "groupName": "google",
      "matchPackageNames": [
        "/^google.golang.org//"
      ]
    },
    {
      "description": "Automerge patch updates",
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    },
    {
      "description": "Automerge minor updates for test dependencies",
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ],
  "schedule": [
    "before 9am on monday"
  ],
  "timezone": "America/Los_Angeles"
}
