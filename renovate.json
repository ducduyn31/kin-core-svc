{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":automergeMinor",
    "group:allNonMajor"
  ],
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "postUpdateOptions": ["gomodTidy"],
  "packageRules": [
    {
      "description": "Group AWS SDK updates",
      "matchPackagePatterns": ["^github.com/aws/"],
      "groupName": "aws-sdk-go-v2"
    },
    {
      "description": "Group OpenTelemetry updates",
      "matchPackagePatterns": ["^go.opentelemetry.io/"],
      "groupName": "opentelemetry"
    },
    {
      "description": "Group Google packages",
      "matchPackagePatterns": ["^google.golang.org/"],
      "groupName": "google"
    },
    {
      "description": "Automerge patch updates",
      "matchUpdateTypes": ["patch"],
      "automerge": true
    },
    {
      "description": "Automerge minor updates for test dependencies",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ],
  "schedule": ["before 9am on monday"],
  "timezone": "America/Los_Angeles"
}
